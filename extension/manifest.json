{
  "manifest_version": 3,
  "name": "LegalLens - T&C Analyzer",
  "version": "1.0",
  "description": "Terms & Conditions belgelerindeki riskli maddeleri yapay zeka ile tespit eder.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*", 
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "LegalLens ile Analiz Et",
    "default_icon": {
        "16": "icons/legallens_icon_16.png",
        "48": "icons/legallens_icon_48.png",
        "128": "icons/legallens_icon_128.png"
    }
  },
  "icons": {
    "16": "icons/legallens_icon_16.png",
    "48": "icons/legallens_icon_48.png",
    "128": "icons/legallens_icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}